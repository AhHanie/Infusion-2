<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>[FSF] Better Exploration Loot</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingSetMakerDef[defName="MapGen_AncientTempleContents"]/root/options</xpath>
          <value>
            <!-- may have a few empty infusers -->
            <li>
              <weight>0.5</weight>
              <thingSetMaker Class="ThingSetMaker_Count">
                <fixedParams>
                  <filter>
                    <thingDefs>
                      <li>Infusion_InfuserEmpty</li>
                    </thingDefs>
                  </filter>
                  <countRange>1~3</countRange>
                </fixedParams>
              </thingSetMaker>
            </li>
            <!-- randomly filled single infuser -->
            <li>
              <weight>0.25</weight>
              <thingSetMaker Class="Infusion.ThingSetMakerInfuser" />
            </li>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingSetMakerDef[defName="Reward_ItemsStandard"]/root/options/li/thingSetMaker/options</xpath>
          <value>
            <!-- randomly filled single infuser -->
            <li>
              <weight>0.5</weight>
              <thingSetMaker Class="Infusion.ThingSetMakerInfuser" />
            </li>
          </value>
        </li>
      </operations>
    </match>
    <nomatch Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingSetMakerDef[defName="MapGen_AncientTempleContents"]/root/options</xpath>
          <value>
            <!-- may have a few empty infusers -->
            <li>
              <chance>0.5</chance>
              <thingSetMaker Class="ThingSetMaker_Count">
                <fixedParams>
                  <filter>
                    <thingDefs>
                      <li>Infusion_InfuserEmpty</li>
                    </thingDefs>
                  </filter>
                  <countRange>1~3</countRange>
                </fixedParams>
              </thingSetMaker>
            </li>
            <!-- randomly filled single infuser -->
            <li>
              <chance>0.25</chance>
              <thingSetMaker Class="Infusion.ThingSetMakerInfuser" />
            </li>
          </value>
        </li>

        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingSetMakerDef[defName="Reward_ItemsStandard"]/root/options/li/thingSetMaker/options</xpath>
          <value>
            <!-- randomly filled single infuser -->
            <li>
              <weight>0.5</weight>
              <thingSetMaker Class="Infusion.ThingSetMakerInfuser" />
            </li>
          </value>
        </li>
      </operations>
    </nomatch>
  </Operation>
</Patch>