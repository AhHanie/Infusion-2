<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Toggleable Shields</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/Infusion.InfusionDef[defName="Rare_Aegis"]</xpath>
                    <value>
                        <disabled>true</disabled>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/Infusion.InfusionDef[defName="Legendary_Aegis"]</xpath>
                    <value>
                        <disabled>true</disabled>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>