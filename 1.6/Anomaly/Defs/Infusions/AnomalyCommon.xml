<?xml version="1.0" encoding="UTF-8" ?>
<Defs>
    <Infusion.InfusionDef ParentName="CommonWeaponsBase">
        <defName>Common_Umbra</defName>
        <label>umbra</label>
        <labelShort>umbr</labelShort>
        <matches>
            <li Class="Infusion.Matchers.EquipmentType">
                <melee>true</melee>
                <ranged>true</ranged>
            </li>
            <li Class="Infusion.Matchers.ProjectileBullet" />
        </matches>
        <onHits>
            <li Class="Infusion.OnHitWorkers.IfBioTargetHit">
                <value Class="Infusion.OnHitWorkers.AddResearch">
                    <chance>0.025</chance>
                    <amount>1</amount>
                    <anomaly>true</anomaly>
                    <knowledgeCategory>Basic</knowledgeCategory>
                </value>
            </li>
        </onHits>
        <extraDescriptions>
            <li>Hit: 2.5% chance to add 1 basic research points to the current Anomaly project</li>
        </extraDescriptions>
        <conditions>
            <li Class="Infusion.Conditions.AnomalyStudyEnabled"/>
        </conditions>
        <weight>0.25</weight>
    </Infusion.InfusionDef>

    <Infusion.InfusionDef ParentName="CommonWeaponsBase">
        <defName>Common_Warpbreaker</defName>
        <label>warpbreaker</label>
        <labelShort>wrpbrk</labelShort>
        <matches>
            <li Class="Infusion.Matchers.ProjectileBullet" />
        </matches>
        <onHits>
            <li Class="Infusion.OnHitWorkers.IfBioTargetHit">
                <value Class="Infusion.OnHitWorkers.IfTargetFaction">
                    <factionDef>Entities</factionDef>
                    <value Class="Infusion.OnHitWorkers.ApplyDamage">
                        <amount>0.05</amount>
                        <sameAsOriginal>true</sameAsOriginal>
                    </value>
                </value>
            </li>
        </onHits>
        <extraDescriptions>
            <li>Deal 5% additional damage against anomaly entities.</li>
        </extraDescriptions>
        <conditions>
            <li Class="Infusion.Conditions.AnomalyStudyEnabled"/>
        </conditions>
        <weight>0.25</weight>
    </Infusion.InfusionDef>
</Defs>